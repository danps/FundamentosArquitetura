<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DIWebApplication</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DIWebApplication.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Dependency Inversion Principle</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="VidaReal" asp-action="Index">Vida Real</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Lifecycle" asp-action="Index">Ciclo de Vida</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Generic" asp-action="Index">Generics</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="FromServices" asp-action="Index">From Services</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="ServiceLocator" asp-action="Index">Service Locator</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="ServiceLocator2" asp-action="Index">Service Locator 2</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="MultiplasClasses" asp-action="Index">Multiplas Classes</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
     
    <div class="container">
        <main role="main" class="pb-3">
            <h2>@ViewData["Title"] </h2>
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - DIWebApplication - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
